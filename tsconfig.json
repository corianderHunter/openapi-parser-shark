{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "test/**/*",
    "out/**/*"
  ]
}